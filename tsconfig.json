{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": [
    "./src/**/*"
  ]
}